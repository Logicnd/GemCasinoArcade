// Prisma schema for Gem Casino Arcade Phase 2
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  ADMIN
  USER
}

enum GemTransactionType {
  DAILY_BONUS
  SLOTS_BET
  SLOTS_PAYOUT
  MINES_BET
  MINES_PAYOUT
  PLINKO_BET
  PLINKO_PAYOUT
  BLACKJACK_BET
  BLACKJACK_PAYOUT
  JACKPOT_ENTRY
  JACKPOT_WIN
  ADMIN_ADJUST
  CASE_OPEN_BET
  CASE_OPEN_REWARD
}

enum Rarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
  MYTHICAL
  DIVINE
  SECRET
}

enum ItemType {
  TITLE
  AVATAR
  FRAME
  THEME
  REEL_SKIN
  EMOTE
}

enum MinesRoundStatus {
  ACTIVE
  CASHED
  LOST
}

enum BlackjackStatus {
  ACTIVE
  PLAYER_BUST
  DEALER_BUST
  PLAYER_WIN
  DEALER_WIN
  PUSH
  CASHED
}

enum JackpotStatus {
  OPEN
  CLOSED
  SETTLED
}

model User {
  id                String    @id @default(cuid())
  username          String    @unique
  name              String?
  email             String?   @unique
  emailVerified     DateTime?
  image             String?
  passwordHash      String
  roles             Role[]
  gemsBalance       Int       @default(1000)
  shardsBalance     Int       @default(0)
  ageGateAcceptedAt DateTime?
  settings          Json?
  publicTag         String?
  equippedTitleId   String?
  isBanned          Boolean   @default(false)
  banReason         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  equippedTitle Item? @relation("EquippedTitle", fields: [equippedTitleId], references: [id])

  sessions            Session[]
  accounts            Account[]
  auditLogs           AuditLog[]        @relation("AuditActor")
  auditsOnUser        AuditLog[]        @relation("AuditTarget")
  gemTransactions     GemTransaction[]
  inventory           Inventory[]
  minesRounds         MinesRound[]
  blackjackSessions   BlackjackSession[]
  jackpotEntries      JackpotEntry[]
  jackpotWins         JackpotRound[]    @relation("JackpotWinner")
  caseOpenLogs        CaseOpenLog[]
  gameConfigsUpdated  GameConfig[]
  siteConfigsUpdated  SiteConfig[]
  caseDefinitionsUpdated CaseDefinition[]
  gameConfigHistory   GameConfigHistory[]   @relation("GameConfigHistoryUpdatedBy")
  siteConfigHistory   SiteConfigHistory[]   @relation("SiteConfigHistoryUpdatedBy")
  caseDefinitionHistory CaseDefinitionHistory[] @relation("CaseDefinitionHistoryUpdatedBy")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id           String   @id @default(cuid())
  actorUserId  String?
  targetUserId String?
  actionType   String
  reason       String?
  metadata     Json?
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  actorUser  User? @relation("AuditActor", fields: [actorUserId], references: [id])
  targetUser User? @relation("AuditTarget", fields: [targetUserId], references: [id])

  @@index([actorUserId])
  @@index([targetUserId])
  @@index([createdAt])
}

model GemTransaction {
  id           String             @id @default(cuid())
  userId       String
  type         GemTransactionType
  amount       Int
  balanceAfter Int
  refId        String
  metadata     Json?
  createdAt    DateTime           @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([refId])
}

model GameConfig {
  id             String   @id @default(cuid())
  key            String   @unique
  enabled        Boolean  @default(true)
  config         Json
  version        Int      @default(1)
  updatedAt      DateTime @default(now())
  updatedByUserId String?
  updatedBy       User?   @relation(fields: [updatedByUserId], references: [id])
}

model GameConfigHistory {
  id             String   @id @default(cuid())
  key            String
  enabled        Boolean
  config         Json
  version        Int
  updatedAt      DateTime
  updatedByUserId String?
  updatedBy       User?   @relation("GameConfigHistoryUpdatedBy", fields: [updatedByUserId], references: [id])

  @@unique([key, version])
  @@index([key])
}

model SiteConfig {
  id                 Int      @id @default(1)
  maintenanceMode    Boolean  @default(false)
  maintenanceMessage String   @default("")
  dailyBonusBase     Int      @default(250)
  streakBonus        Int      @default(25)
  streakCap          Int      @default(250)
  disclaimer         String   @default("Entertainment only. Virtual gems only. No real money. No prizes. No cash-out.")
  version            Int      @default(1)
  updatedAt          DateTime @default(now())
  updatedByUserId    String?
  updatedBy          User?    @relation(fields: [updatedByUserId], references: [id])
}

model SiteConfigHistory {
  id                 String   @id @default(cuid())
  maintenanceMode    Boolean
  maintenanceMessage String
  dailyBonusBase     Int
  streakBonus        Int
  streakCap          Int
  disclaimer         String
  version            Int
  updatedAt          DateTime
  updatedByUserId    String?
  updatedBy          User?    @relation("SiteConfigHistoryUpdatedBy", fields: [updatedByUserId], references: [id])
}

model Item {
  id        String   @id @default(cuid())
  name      String
  rarity    Rarity
  type      ItemType
  assetKey  String
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  inventories  Inventory[]
  caseOpenLogs CaseOpenLog[]
  equippedBy   User[]   @relation("EquippedTitle")

  @@unique([assetKey])
}

model CaseDefinition {
  id             String   @id @default(cuid())
  key            String   @unique
  name           String
  priceGems      Int
  enabled        Boolean  @default(true)
  rarityWeights  Json
  itemPools      Json
  version        Int      @default(1)
  updatedAt      DateTime @default(now())
  updatedByUserId String?
  updatedBy       User?   @relation(fields: [updatedByUserId], references: [id])

  openLogs CaseOpenLog[]
}

model CaseDefinitionHistory {
  id             String   @id @default(cuid())
  key            String
  name           String
  priceGems      Int
  enabled        Boolean
  rarityWeights  Json
  itemPools      Json
  version        Int
  updatedAt      DateTime
  updatedByUserId String?
  updatedBy       User?   @relation("CaseDefinitionHistoryUpdatedBy", fields: [updatedByUserId], references: [id])

  @@unique([key, version])
  @@index([key])
}

model Inventory {
  id         String   @id @default(cuid())
  userId     String
  itemId     String
  quantity   Int      @default(1)
  acquiredAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId])
  @@index([userId])
}

model CaseOpenLog {
  id           String   @id @default(cuid())
  userId       String
  caseId       String
  rolledRarity Rarity
  itemId       String
  rngMetadata  Json?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  case CaseDefinition @relation(fields: [caseId], references: [id])
  item Item @relation(fields: [itemId], references: [id])

  @@index([userId, createdAt])
}

model MinesRound {
  id          String           @id @default(cuid())
  userId      String
  bet         Int
  minesCount  Int
  state       Json
  status      MinesRoundStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model BlackjackSession {
  id        String           @id @default(cuid())
  userId    String
  bet       Int
  state     Json
  status    BlackjackStatus @default(ACTIVE)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model JackpotRound {
  id           String         @id @default(cuid())
  status       JackpotStatus  @default(OPEN)
  endsAt       DateTime
  pot          Int            @default(0)
  seed         String
  createdAt    DateTime       @default(now())
  winnerUserId String?

  winner  User?          @relation("JackpotWinner", fields: [winnerUserId], references: [id])
  entries JackpotEntry[]

  @@index([status])
}

model JackpotEntry {
  id        String   @id @default(cuid())
  roundId   String
  userId    String
  amount    Int
  createdAt DateTime @default(now())

  round JackpotRound @relation(fields: [roundId], references: [id], onDelete: Cascade)
  user  User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([roundId])
  @@index([userId])
}
